<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Pinkleaf</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body>

    <!-- HEADER -->
    
   <header class="header">
    <div class="header-container">
        
        <div class="logo">
 <img src="/images/logo.jpeg" alt="logo">

</div>


        <div class="right-group">
           <nav class="nav-links">
    <a href="@Url.Action("Login","Account")">Home</a>
    <a href="@Url.Action("Login","Account")">Retail</a>
    <a href="@Url.Action("Login","Account")">Wholesale</a>
</nav>

            @if (Context.Session.GetString("UserEmail") != null)
            {
                <a href="#">My Account</a>
                <a href="@Url.Action("Logout","Account")">Logout</a>
            }
            else
            {
                <a href="@Url.Action("Login","Account")">Login</a>
            }
        </nav>
    </header>

    <!-- BODY -->
    <main>
    @RenderBody()
</main>


</body>
</html>
