@{
    ViewBag.Title = "Home";
}

<!-- HERO SECTION -->
<section class="hero-section">
    <h2>Premium collection for Women</h2>
    <p>Discover our curated collection of stylish, comfortable clothing designed exclusively for modern women</p>
    <a asp-controller="UserHome" asp-action="Retail" class="cta-btn">
    Shop Now
</a>

</section>

<!-- CHOOSE SHOPPING MODE -->
<section class="shopping-mode">
    <h3>Choose Your Shopping Mode</h3>
    <p>Shop as a retailer or explore our wholesale opportunities</p>

    <div class="mode-cards">

        <div class="mode-card retail-card">
            <div class="overlay">
                <h4>Retail Shopping</h4>
                <p>Premium individual products with fast delivery</p>
                <a asp-controller="Home" asp-action="Retail" class="cta-btn">
                    Shop Now
                </a>
                
            </div>
        </div>

        <div class="mode-card wholesale-card">
            <div class="overlay">
                <h4>Wholesale</h4>
                <p>Bulk order with competitive pricing & support</p>
                <a asp-controller="Home" asp-action="Wholesale" class="cta-btn">
                    Explore
                </a>
            </div>
        </div>

    </div>
</section>

<section class="info-cards-section">
    <div class="info-cards">

        <div class="info-card">
            <h4 class="retail-title">Retail</h4>
            <p><strong>Individual Orders</strong></p>
            <span>Trendy collection</span>
            <span>Quick delivery</span>
            <span>Secure checkout</span>
        </div>

        <div class="info-card">
            <h4 class="wholesale-title">Wholesale</h4>
            <p><strong>Bulk Orders</strong></p>
            <span>40-60% discount</span>
            <span>Flexible terms</span>
            <span>Dedicated support</span>
        </div>

        <div class="info-card">
            <h4 class="both-title">Both</h4>
            <p><strong>All Benefits</strong></p>
            <span>Quality assured</span>
            <span>24/7 support</span>
            <span>Trusted brand</span>
        </div>

    </div>
</section>

<section class="retail-collections">
    <h3>Retail Collections</h3>
    <p class="subtitle">Explore our individual product range</p>

    <div class="scroll-container">
        <a href="@Url.Action("Retail")" class="card">
            <img src="~/images/tishrt.png" />
        </a>
        <a href="@Url.Action("Retail")" class="card">
            <img src="~/images/jeans.png" />
        </a>
        <a href="@Url.Action("Retail")" class="card">
            <img src="~/images/western.png" />
        </a>
        <a href="@Url.Action("Retail")" class="card">
            <img src="~/images/cordset.png" />
        </a>
        <a href="@Url.Action("Retail")" class="card">
            <img src="~/images/kurti.png" />
        </a>
    </div>
</section>

<section class="why-us">
    <h3 class="why-heading">Why Shop With Us?</h3>

    <div class="why-container">
        <div class="why-card">
            <h4>Premium Quality</h4>
            <p>High-quality fabrics and perfect stitching for long-lasting wear</p>
        </div>

        <div class="why-card">
            <h4>Fast Delivery</h4>
            <p>Quick and reliable shipping to your doorstep</p>
        </div>

        <div class="why-card">
            <h4>Secure Shopping</h4>
            <p>Safe and secure payment options for your peace of mind</p>
        </div>
    </div>
</section>
