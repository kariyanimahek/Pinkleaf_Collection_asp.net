@model Pinkleaf_Collection.Models.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Register</title>

    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>

    <!-- 🔙 BACK BUTTON -->
    <a asp-controller="Account" asp-action="Login" class="back-btn">◀</a>

    <div class="register-wrapper">
        <div class="login-card">

            <img src="~/images/logo.jpeg" class="login-logo" />
            <h3>Create your account</h3>

            <form asp-action="Register" method="post">

                <!-- ❌❌ SUMMARY ERROR -->
                

                <label>Full Name</label>
                <input asp-for="FullName" placeholder="Enter Name" />
                <span asp-validation-for="FullName" style="color:red"></span>

                <label>Address</label>
                <input asp-for="Address" placeholder="Enter Address" />
                <span asp-validation-for="Address" style="color:red"></span>

                <label>Email Address</label>
                <input asp-for="Email" placeholder="Enter email" />
                <span asp-validation-for="Email" style="color:red"></span>

                <label>Phone Number</label>
                <input asp-for="Phone" placeholder="+91 xxxxx xxxxx" />
                <span asp-validation-for="Phone" style="color:red"></span>

                <label>Password</label>
                <input asp-for="Password" type="password" placeholder="Enter password" />
                <span asp-validation-for="Password" style="color:red"></span>

                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" style="color:red"></span>

                <button type="submit" class="login-btn">Sign up</button>
            </form>

        </div>
    </div>

    <!-- ✅ CLIENT SIDE VALIDATION -->
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


</body>
</html>
